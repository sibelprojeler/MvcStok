@model MvcStok.Models.Entity.TBL_URUNLER
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_Main_Layout.cshtml";
}

<form class="form-group" method="post"
 <div>
<label>Ürün Adı</label>
<input type="text" class="form-control" name="URUNAD" required=""
</div>
<div>
<label>Ürün Marka</label>
<input type="text" class="form-control" name="MARKA" required=""  maxlength="10" placeholder="Mutlaka MARKA bilgisi belirtin"/>
</div>
<div>
<label>Kategori Seçiniz</label>
@Html.DropDownListFor(m=>m.TBL_KATEGORI.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new {@class = "form-control"})
</div>
<div>
<label>Fiyat</label>
<input type="text" class="form-control" name="FİYAT" required="" />
</div>
<div>
<label>Stok Miktarı</label>
<input type="text" class="form-control" name="STOK" required=""/>
 </div>
<div style="margin-top:15px">
<button class="btn btn-info">KAYDET</button>
</div>


